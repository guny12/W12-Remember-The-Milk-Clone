extends project
include utils.pug
append head
  script(src="/javascripts/tasksAPI.js" type="module")
block projects
  .taskList__div
    div(class="text-progress-bar-div")
      h1 Project: #{name}
      //- div(class="progressBorder" name=`${projectProgress}`)
      //-   div(class="progressFiller" style=`width: ${projectProgress}%`)
      //-   div(class=ternary): span #{projectProgress}%
    form(id= projectId class='taskList__form')
      label(for="createNewTask")
      input(type="text" id="createNewTask" name="name" placeHolder="Create New Task" class="formField_createTask")
      div(class="priority-dropdown-div")
        label(for="priority") Priority
        select(name="priority")
          option(value=1) 1 High
          option(value=2) 2 Moderate
          option(value=3) 3 Low
      button(type="submit" class="user-submit-button") Create New Task
        i(class="fas fa-pencil-alt")
    div(class="tasksContainer")
      each task in tasks
        +taskTile(task.name, task.inProgress, task.completed, task.priority, task.id)
    div(class="bottomLines")
  block tasks


